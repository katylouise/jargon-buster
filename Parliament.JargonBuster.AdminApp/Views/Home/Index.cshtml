@model AdminApp.ViewModels.DefinitionsViewModel

@{
    ViewBag.Title = "Home Page";
}

<div class="wrapper">

    <div class="content">
        <div class="header cf">
            <h1 class="header__title">Jargon Buster: Admin </h1>
            <h2 class="header__subtitle">Edit definitions </h2>
            @Html.ActionLink("Add a definition", "Add", null, new Dictionary<string, Object> { { "class", "add-definition" }, { "data-toggle", "modal" }, { "data-target", "formModal" } })
        </div>

    </div>

    <table border="0" cellspacing="0" cellpadding="0" class="definitions-table">
        <thead>
            <tr>
                <th scope="col" class="header-name">Name</th>
                <th colspan="2" scope="col" class="header-action">Actions</th>
                <th scope="col" class="header-category">Category</th>
                <th scope="col" class="header-created">Created</th>
                <th scope="col" class="header-edited">Last edited</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var def in Model.Definitions)
            {
                <tr class="item-group">
                    <td>@def.Phrase</td>
                    <td class="item-edit">@Html.ActionLink("Edit", "Edit", new { id = def.Id }, new Dictionary<string, Object> { { "class", "item-edit" }, { "data-toggle", "modal" }, { "data-target", "formModal" } })</td>
                    <td class="item-delete"><a href="#">@Html.ActionLink("Delete", "Delete", new { id = def.Id }, new Dictionary<string, Object> { { "class", "item-delete" }, { "data-toggle", "modal" }, { "data-target", "deleteModal" } })</a></td>
                    <td class="item-category item-category--bicameral">@def.House</td>
                    <td class="item-created">@def.CreatedAt.ToString("dd/MM/yyyy")</td>
                    <td class="item-edited">@def.UpdatedAt.ToString("dd/MM/yyyy")</td>
                </tr>
            }
        </tbody>
    </table>

    <p>@Html.ActionLink("Add a definition", "Add", null, new Dictionary<string, Object> { { "class", "add-definition" }, { "data-toggle", "modal" }, { "data-target", "formModal" } })</p>

</div>
