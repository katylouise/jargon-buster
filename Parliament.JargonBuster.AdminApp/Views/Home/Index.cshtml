@model AdminApp.ViewModels.DefinitionsViewModel

@{
    ViewBag.Title = "Home Page";
}

@Html.ActionLink("Add", "Add", new { })

@using (Html.BeginForm("Search", "Home", FormMethod.Post))
{
    <input type="text" id="searchTerm" name="searchTerm" />
    <button type="submit">Search</button>
}
<ol>
        @foreach (var def in Model.Definitions)
        {
            <li>
                <ul>
                    <li>@def.Phrase</li>
                    <li>@def.CreatedAt</li>

                    if (@def.UpdatedAt != null)
                    {
                    <li>@def.UpdatedAt</li>
                    }
                    <li>@Html.ActionLink("Edit", "Edit", new { id = def.Id })</li>
                    <li>@Html.ActionLink("Delete", "Delete", new { id = def.Id })</li>
                </ul>
        </li>
    } 
</ol>